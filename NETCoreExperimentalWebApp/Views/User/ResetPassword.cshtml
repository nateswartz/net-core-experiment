@model NETCoreExperimentalWebApp.Models.ApplicationUser

@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="ui header">Reset Password for @Model.UserName</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form class="ui form" asp-action="ResetPassword">
            <div class="field">
                <label type="text" name="newPassword" class="control-label"></label>
                <input name="newPassword" class="form-control" />
            </div>
            @*<input type="hidden" name="id" value=@Model.Id />*@
            <div class="field">
                <input type="submit" value="Save" class="ui button" />
            </div>
        </form>
    </div>
</div>

