@model IEnumerable<NETCoreExperimentalWebApp.Models.StarWarsModels.SpeciesModel>

@{
    ViewData["Title"] = "Species";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="ui header">Species</h2>

<table id="tblSpecies" class="ui celled table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Classification)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Designation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Average_Height)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Skin_Colors)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Hair_Colors)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Eye_Colors)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Average_Lifespan)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Language)
                </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Classification)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Designation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Average_Height)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Skin_Colors)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hair_Colors)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Eye_Colors)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Average_Lifespan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Language)
            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tblSpecies').DataTable();
        });
    </script>
}