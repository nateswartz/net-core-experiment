<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - NETCoreExperimentalWebApp</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/semantic/dist/semantic.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <div class="ui menu">
        <a class="item header" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
        <a class="item header" asp-area="" asp-controller="Books" asp-action="Index">Books</a>

    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>

    <script type="text/javascript" src="~/lib/jquery/dist/jquery.js"></script>
    <script type="text/javascript" src="~/lib/knockout/dist/knockout.js"></script>
    <script type="text/javascript" src="~/lib/semantic/dist/semantic.min.js"></script>
    <script type="text/javascript" src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
